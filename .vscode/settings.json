{
  "multiCommand.commands": [
    {
      "command": "multiCommand.stageCommitPush",
      "sequence": [
        "workbench.action.files.save",
        "workbench.action.terminal.new",
        "workbench.action.terminal.focus",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": {
            "text": "cd ${workspaceFolder} && git add -A && (git diff --staged --quiet || git commit -m \"auto: $(date -u +'%Y-%m-%dT%H:%M:%SZ')\") && git push\n"
          }
        }
      ]
    },
    {
      "command": "multiCommand.kelvinUpload",
      "sequence": [
        "workbench.action.terminal.new",
        "workbench.action.terminal.focus",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": {
            "text": "cd ${workspaceFolder} && kelvin app upload\n"
          }
        }
      ]
    }
  ]
}

